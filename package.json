{
  "name": "shutterqueue",
  "version": "0.7.6d",
  "private": true,
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "concurrently -k \"cross-env NODE_ENV=development vite\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .\"",
    "build": "vite build",
    "dist": "npm run generate-licenses && npm run build && electron-builder",
    "pack": "npm run generate-licenses && npm run build && electron-builder --dir",
    "generate-licenses": "node scripts/generate-licenses.cjs"
  },
  "dependencies": {
    "electron-store": "^8.2.0",
    "form-data": "^4.0.4",
    "mime-types": "^2.1.35",
    "oauth-1.0a": "^2.2.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^35.7.5",
    "typescript": "^5.6.3",
    "vite": "^5.4.21",
    "wait-on": "^8.0.2",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.pwnicholson.shutterqueue",
    "productName": "ShutterQueue",
    "files": [
      "dist/**/*",
      "electron/**/*",
      "assets/**/*",
      "package.json"
    ],
    "directories": {
      "output": "release"
    },
    "asar": true,
    "win": {
      "icon": "assets/icon.ico"
    },
    "mac": {
      "icon": "assets/icon.icns"
    },
    "linux": {
      "icon": "assets/icon.png"
    }
  }
}
